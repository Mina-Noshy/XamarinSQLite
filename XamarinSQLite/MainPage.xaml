<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDApplication.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Eastaria Company" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Padding="24">
            <Label Text="Start with Eastaria now" FontSize="Title" Padding="30,10,30,10"/>
            <Button x:Name="btnGetStarted" Clicked="btnGetStarted_Clicked" Margin="20,50,20,0" Text="Get Started" FontSize="Title" FontAttributes="Bold" TextColor="White" BackgroundColor="DeepPink" CornerRadius="10" />
        </StackLayout>
    </StackLayout>

</ContentPage>
